using System;
using System.Drawing;
using System.Windows.Forms;

namespace Central_de_Software
{
    public class UserControlDiagnosticsTech : UserControl
    {
        private Button btnVoltar;
        public event EventHandler VoltarClicked;

        public UserControlDiagnosticsTech()
        {
            this.BackColor = Color.FromArgb(30, 30, 30);
            this.Dock = DockStyle.Fill;
            this.Width = 700;
            this.Height = 660;
            AdicionarBotaoVoltar();
        }

        private void AdicionarBotaoVoltar()
        {
            btnVoltar = new Button
            {
                Text = "Voltar",
                Width = 120,
                Height = 40,
                BackColor = Color.FromArgb(60, 60, 60),
                ForeColor = Color.White,
                FlatStyle = FlatStyle.Flat
            };
            btnVoltar.FlatAppearance.BorderSize = 0;
            btnVoltar.FlatAppearance.MouseOverBackColor = Color.FromArgb(80, 80, 80);
            btnVoltar.Click += (s, e) => VoltarClicked?.Invoke(this, EventArgs.Empty);

            // Centraliza o botão
            btnVoltar.Left = (this.Width - btnVoltar.Width) / 2;
            btnVoltar.Top = (this.Height - btnVoltar.Height) / 2;
            btnVoltar.Anchor = AnchorStyles.None;
            this.Controls.Add(btnVoltar);
        }
    }
}
