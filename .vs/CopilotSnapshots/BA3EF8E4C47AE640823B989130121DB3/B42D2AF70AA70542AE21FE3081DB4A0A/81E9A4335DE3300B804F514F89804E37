using System;
using System.Windows.Forms;

public class FormMain : Form
{
    private Panel panelMenu;
    private Button btnHome;
    private Button btnSoftware;
    private Button btnTools;
    private Button btnFiscal;
    private Panel panelContent;

    public FormMain()
    {
        InitializeComponent();
    }

    private void InitializeComponent()
    {
        this.Text = "Central de Software";
        this.Width = 900;
        this.Height = 700;
        this.FormBorderStyle = FormBorderStyle.FixedDialog;
        this.MaximizeBox = false;
        this.MinimizeBox = true;
        this.StartPosition = FormStartPosition.CenterScreen;
        this.MaximumSize = new System.Drawing.Size(900, 700);
        this.MinimumSize = new System.Drawing.Size(900, 700);

        panelMenu = new Panel { Width = 180, Dock = DockStyle.Left, BackColor = System.Drawing.Color.FromArgb(240, 240, 240) };
        btnHome = new Button { Text = "Início", Top = 10, Left = 10, Width = 160, Height = 40 };
        btnSoftware = new Button { Text = "Software", Top = 60, Left = 10, Width = 160, Height = 40 };
        btnTools = new Button { Text = "Tools", Top = 110, Left = 10, Width = 160, Height = 40 };
        btnFiscal = new Button { Text = "Fiscal", Top = 160, Left = 10, Width = 160, Height = 40 };
        btnHome.Click += (s, e) => ShowControl(new UserControlHome());
        btnSoftware.Click += (s, e) => ShowControl(new UserControlSoftware());
        btnTools.Click += (s, e) => ShowControl(new UserControlTools());
        btnFiscal.Click += (s, e) => ShowControl(new UserControlFiscal());
        panelMenu.Controls.AddRange(new Control[] { btnHome, btnSoftware, btnTools, btnFiscal });

        panelContent = new Panel { Dock = DockStyle.Fill };
        this.Controls.Add(panelContent);
        this.Controls.Add(panelMenu);

        ShowControl(new UserControlHome());
    }

    private void ShowControl(UserControl control)
    {
        panelContent.Controls.Clear();
        control.Dock = DockStyle.Fill;
        panelContent.Controls.Add(control);
    }
}
