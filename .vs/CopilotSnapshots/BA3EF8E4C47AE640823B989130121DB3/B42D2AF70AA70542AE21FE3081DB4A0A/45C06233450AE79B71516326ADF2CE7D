using System;
using System.Windows.Forms;

public class UserControlFiscal : UserControl
{
    private TableLayoutPanel mainLayout;
    private Panel panelMenuFiscal;
    private Button btnXmlEditor;
    private Panel panelContentFiscal;

    public UserControlFiscal()
    {
        InitializeComponent();
    }

    private void InitializeComponent()
    {
        this.Dock = DockStyle.Fill;
        mainLayout = new TableLayoutPanel
        {
            Dock = DockStyle.Fill,
            ColumnCount = 2,
            RowCount = 1,
        };
        mainLayout.ColumnStyles.Add(new ColumnStyle(SizeType.Absolute, 220F));
        mainLayout.ColumnStyles.Add(new ColumnStyle(SizeType.Percent, 100F));

        panelMenuFiscal = new Panel { Dock = DockStyle.Fill, BackColor = System.Drawing.Color.FromArgb(240, 240, 240) };
        btnXmlEditor = new Button { Text = "Editor de XML da NFe", Width = 180, Height = 50, Top = 30, Left = 20, Font = new System.Drawing.Font("Segoe UI", 11F) };
        btnXmlEditor.Click += (s, e) => ShowFiscalFunction(new UserControlFiscalXmlEditor());
        panelMenuFiscal.Controls.Add(btnXmlEditor);

        panelContentFiscal = new Panel { Dock = DockStyle.Fill, BackColor = System.Drawing.Color.White };
        mainLayout.Controls.Add(panelMenuFiscal, 0, 0);
        mainLayout.Controls.Add(panelContentFiscal, 1, 0);
        this.Controls.Add(mainLayout);

        ShowFiscalHome();
    }

    private void ShowFiscalFunction(UserControl control)
    {
        panelContentFiscal.Controls.Clear();
        control.Dock = DockStyle.Fill;
        panelContentFiscal.Controls.Add(control);
    }

    private void ShowFiscalHome()
    {
        var label = new Label
        {
            Text = "Escolha uma função fiscal ao lado.",
            AutoSize = false,
            Width = 400,
            Height = 40,
            Top = 40,
            Left = 40,
            Font = new System.Drawing.Font("Segoe UI", 16),
            TextAlign = System.Drawing.ContentAlignment.MiddleLeft
        };
        panelContentFiscal.Controls.Clear();
        panelContentFiscal.Controls.Add(label);
    }
}
