using System.Windows.Forms;
using System.Drawing;
using Central_de_Software.Utilities;

public class UserControlHome : UserControl
{
    public UserControlHome()
    {
        InitializeComponent();
    }

    private void InitializeComponent()
    {
        this.Dock = DockStyle.Fill;
        this.BackColor = Color.White;

        var corAzul = ColorTranslator.FromHtml("#1A377B");
        var corLaranja = ColorTranslator.FromHtml("#F15A22");

        var pictureBox = new PictureBox
        {
            Width = 160,
            Height = 160,
            Top = 60,
            Left = (this.Width - 160) / 2,
            SizeMode = PictureBoxSizeMode.Zoom,
            Anchor = AnchorStyles.Top
        };
        // Carregar logo se existir
        var logo = ResourceImages.GetImage("logo.png");
        if (logo != null)
            pictureBox.Image = logo;

        var labelTitulo = new Label
        {
            Text = "Bem-vindo à Central de Software",
            Font = new Font("Segoe UI", 24, FontStyle.Bold),
            AutoSize = true,
            Top = 240,
            Left = (this.Width - 600) / 2,
            Width = 600,
            ForeColor = corAzul,
            TextAlign = ContentAlignment.MiddleCenter,
            Anchor = AnchorStyles.Top
        };

        var labelMensagem = new Label
        {
            Text = "Escolha uma das opções no menu acima para instalar softwares, otimizar seu sistema ou acessar funções fiscais.",
            Font = new Font("Segoe UI", 14),
            AutoSize = false,
            Width = 700,
            Height = 60,
            Top = 300,
            Left = (this.Width - 700) / 2,
            ForeColor = corLaranja,
            TextAlign = ContentAlignment.MiddleCenter,
            Anchor = AnchorStyles.Top
        };

        this.Controls.Add(pictureBox);
        this.Controls.Add(labelTitulo);
        this.Controls.Add(labelMensagem);
        this.Resize += (s, e) =>
        {
            pictureBox.Left = (this.Width - pictureBox.Width) / 2;
            labelTitulo.Left = (this.Width - labelTitulo.Width) / 2;
            labelMensagem.Left = (this.Width - labelMensagem.Width) / 2;
        };
    }
}
